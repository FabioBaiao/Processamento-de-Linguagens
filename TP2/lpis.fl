%option noyywrap yylineno

%%

DECLS 					  {return DECLS;}
INSTRS 					  {return INSTRS;}
PRINT					  {return PRINT;}
READ 					  {return READ;}
IF 						  {return IF;}
ELSE 					  {return ELSE;}
WHILE					  {return WHILE;}
[,=;:(){}+*/%!<>]|\[|\]|- {return yytext[0];}
[a-z]+ 					  {yylval.v = strdup(yytext); return var;}
-?[0-9]+ 				  {yylval.n = atoi(yytext); return num;}

\"([^"]|\\\")*\" 		  {yylval.v = strdup(yytext); return cad;}

[ \n\t] 				  {}

%%